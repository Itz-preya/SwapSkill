@{ 
    var appName = "SkillSwapApp";
    var controller = (string)ViewContext.RouteData.Values["controller"];
    var action = (string)ViewContext.RouteData.Values["action"];
    var isHome =
        (string.Equals(controller, "Home", System.StringComparison.OrdinalIgnoreCase) &&
         string.Equals(action, "Index", System.StringComparison.OrdinalIgnoreCase))
        ||
        (string.Equals(controller, "Dashboard", System.StringComparison.OrdinalIgnoreCase) &&
         string.Equals(action, "Home", System.StringComparison.OrdinalIgnoreCase));
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @appName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
</head>
<body class="ds">
    <header>
        <nav class="navbar">
            <div class="logo"> SkillSwapApp</div>
            <button class="menu-toggle" aria-label="Toggle navigation" aria-expanded="false" aria-controls="primaryNav">â˜°</button>
            <ul class="nav-links" id="primaryNav">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <li><a class="nav-link" asp-controller="Dashboard" asp-action="Home">Home</a></li>
                    <li><a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li><a class="nav-link" asp-controller="Dashboard" asp-action="Edit">Profile</a></li>
                    <li><a class="nav-link" asp-controller="Dashboard" asp-action="ChatList">Chat</a></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="signup-btn" style="background:#00b4ff;color:#fff;border:none">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="nav-link" href="#team">Team</a></li>
                    <li><a class="nav-link" href="#lessons">Browse Lessons</a></li>
                    <li><a class="nav-link" href="#popular">Popular Lessons</a></li>
                    <li><a class="nav-link" asp-controller="Account" asp-action="Login" id="loginBtn">Log In</a></li>
                    <li><a class="signup-btn" asp-controller="Account" asp-action="Register" id="signupBtn">Sign Up</a></li>
                }
            </ul>
        </nav>
    </header>
    <main class="page-main">
        @if (!isHome)
        {
            <div class="container mt-4">
                @RenderBody()
            </div>
        }
        else
        {
            @RenderBody()
        }
    </main>
    @if (!isHome)
    {
        <footer class="border-top footer text-muted mt-5">
            <div class="container">
                &copy; @DateTime.Now.Year - @appName
            </div>
        </footer>
    }
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
    <script src="~/js/landing.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
