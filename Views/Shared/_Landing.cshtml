@using System.Linq
@model IEnumerable<SkillSwapApp.Models.ApplicationUser>

<header class="hero" id="home">
    <div class="hero-content">
        <h1>Teach, Learn, <span>Grow Together</span></h1>
        <p>Share your knowledge and learn from peers. Every student can be both a teacher and a learner in our vibrant community.</p>
        <div class="hero-buttons">
            <a href="/Account/Register" class="btn primary">Become a Teacher</a>
            <a href="#lessons" class="btn secondary">Browse Lessons</a>
        </div>
    </div>
</header>
<section class="features" id="lessons">
    <div class="feature">
        <h2>Got a skill to share?</h2>
        <p>Whether you're great at math, play an instrument, or know programming - your knowledge can help other students succeed!</p>
        <a href="/Account/Register" class="btn primary">Start Teaching Today</a>
    </div>
    <div class="feature-cards">
        <div class="card">
            <h3>Become a Teacher</h3>
            <p>Share your skills and help other students succeed. Teaching builds confidence and deepens your own knowledge.</p>
        </div>
        <div class="card">
            <h3>Learn from Peers</h3>
            <p>Connect with fellow students who understand your challenges and can explain concepts in relatable ways.</p>
        </div>
        <div class="card">
            <h3>Diverse Skills</h3>
            <p>From mathematics to music, coding to creative writing - explore limitless opportunities to teach and learn.</p>
        </div>
    </div>
</section>
<section class="popular-lessons" id="popular">
    <h2>Popular Lessons</h2>
    <p>Get a taste of what our community has to offer. Join to access the full catalog.</p>
    <div class="popular-cards">
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <div class="popular-card">
                    <div class="popular-icon programming"></div>
                    <div class="popular-meta">
                        <span class="category programming">@user.OfferedSkill</span>
                        <span class="rating"> 5.0</span>
                    </div>
                    <h3>@user.FullName</h3>
                    <p>Offers: @user.OfferedSkill<br />Wants to learn: @user.NeededSkill</p>
                    <a href="/Account/Register" class="btn primary">Request Swap</a>
                </div>
            }
        }
        else
        {
            <div class="popular-card">
                <div class="popular-icon"></div>
                <div class="popular-meta">
                    <span class="category">Community</span>
                </div>
                <h3>No featured users yet</h3>
                <p>Be the first to join and showcase your skills.</p>
                <a href="/Account/Register" class="btn primary">Sign Up</a>
            </div>
        }
    </div>
    <div style="text-align:center; margin-top:2rem;">
        <a href="/Account/Register" class="btn secondary">Join to See All Lessons</a>
    </div>
</section>
<section class="about" id="team">
    <h2>About Skill Swap</h2>
    <p>We believe that every student has something valuable to teach and something meaningful to learn.</p>
    <div class="about-content">
        <div class="about-left">
            <span class="badge mission"> Our Mission</span>
            <h3>Every Student Can Teach</h3>
            <p>You don't need to be an expert to help others learn. Whether you're good at explaining algebra, know guitar basics, or can code simple programs - your knowledge is valuable.</p>
            <p>Teaching others strengthens your own understanding while building confidence and leadership skills. Join thousands of students who are both learning and teaching on our platform.</p>
            <a href="#" class="btn primary">Join Our Community</a>
        </div>
    </div>
</section>
<section class="community" id="community">
    <div class="feature-cards">
        <div class="card">
            <h3>Community First</h3>
            <p>Building genuine connections between students who support each other's growth and celebrate learning together.</p>
        </div>
        <div class="card">
            <h3>Knowledge Sharing</h3>
            <p>Everyone has something valuable to teach, and learning happens best through collaboration and peer support.</p>
        </div>
        <div class="card">
            <h3>Accessibility</h3>
            <p>Making quality education accessible to all students, regardless of background or experience level.</p>
        </div>
    </div>
</section>
<footer>
    <div class="footer-content">
        <div>
        </div>
    </div>
</footer>
