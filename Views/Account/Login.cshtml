@{
    Layout = null;
}
@model SkillSwapApp.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/auth.css" />
<div class="auth-container">
    <div class="auth-card">
        <h2 style="text-align:center;">Join Skill Swap</h2>
        <div style="text-align:center;color:#cbe8ff;margin-bottom:1rem;">Start teaching and learning with peers today</div>
        <div class="auth-tabs">
            <button type="button" class="active" data-tab="login" onclick="window.location.href='/Account/Login'">Log In</button>
            <button type="button" data-tab="register" onclick="window.location.href='/Account/Register'">Sign Up</button>
        </div>
        <form asp-action="Login" method="post" class="auth-form login">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" placeholder="Enter your email" />
            <span asp-validation-for="Email"></span>
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" placeholder="Enter your password" />
            <span asp-validation-for="Password"></span>
            <input asp-for="RememberMe" /> <label asp-for="RememberMe">Remember Me</label>
            <button type="submit" class="btn">Log In</button>
        </form>
    </div>
    <div class="auth-info">
        <div style="display:flex;align-items:center;gap:1rem;">
            <span class="logo" style="font-size:2rem;">📖</span>
            <span style="font-size:2rem;font-weight:700;color:#fff;">Skill Swap</span>
        </div>
        <h1>Learn from Peers,<br /><span>Teach Your Skills</span></h1>
        <p>Join a community where students become teachers and knowledge flows freely. Share your expertise and learn new skills from talented peers.</p>
        <div class="auth-features">
            <div class="auth-feature">👥 <span>Peer Learning</span></div>
            <div class="auth-feature">🧠 <span>Skill Exchange</span></div>
            <div class="auth-feature">💬 <span>Real-time Chat</span></div>
            <div class="auth-feature">📚 <span>Multiple Subjects</span></div>
        </div>
    </div>
</div>
<script src="~/js/auth.js"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}